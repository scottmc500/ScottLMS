# ScottLMS Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# =============================================================================
# Application Configuration
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Log level (debug, info, warning, error)
LOG_LEVEL=debug

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=scottlms

# =============================================================================
# Database Configuration
# =============================================================================
# Database name
DATABASE_NAME=scottlms

# MongoDB/DocumentDB Connection (for local development)
# This will be overridden by AWS Secrets Manager in production
MONGODB_URL=mongodb://admin:password@localhost:27017/scottlms?authSource=admin

# =============================================================================
# Frontend Configuration
# =============================================================================
# API base URL for frontend to connect to backend
API_BASE_URL=http://localhost:8000

# =============================================================================
# Docker Configuration
# =============================================================================
# Docker Compose project name
COMPOSE_PROJECT_NAME=scottlms

# =============================================================================
# Development Tools
# =============================================================================
# Enable hot reload for development
RELOAD=true

# Enable debug mode
DEBUG=true

# =============================================================================
# Security Configuration
# =============================================================================
# Secret key for JWT tokens (generate a secure random string)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Allowed hosts for CORS
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,api,api:8000

# =============================================================================
# Terraform Configuration
# =============================================================================
# Terraform state bucket (will be created by Terraform)
TF_STATE_BUCKET=scottlms-terraform-state

# Domain name for your application
DOMAIN_NAME=scottlms.com

# =============================================================================
# GitHub Actions Configuration
# =============================================================================
# These will be set as GitHub Secrets in your repository
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# =============================================================================
# Production Overrides (uncomment for production)
# =============================================================================
# ENVIRONMENT=production
# LOG_LEVEL=info
# DEBUG=false
# RELOAD=false
# MONGODB_URL=will-be-provided-by-aws-secrets-manager
# API_BASE_URL=https://your-domain.com
